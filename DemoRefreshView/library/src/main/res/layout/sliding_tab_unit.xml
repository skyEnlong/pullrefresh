<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_bg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_bg"
            android:textColor="@color/black_3"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_front"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/text_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_front"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/center_origin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"></View>

        <ImageView
            android:id="@+id/red_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/center_origin"
            android:background="@drawable/red_dot"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>


